.orientation {
	position: fixed;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	background: rgba(0, 0, 0, .92);
	color: white;
	text-align: center;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	padding: 2rem 0;
	display: none;

	&.show {
		display: flex;
	}

	& .icon {
		font-size: 6rem;
	}

	& .title {
		font-size: 1.5rem;
		text-transform: capitalize;
	}

	& .info {
		font-size: 1rem;
	}
}